{% extends "admin_base.njk" %}
{% block titulo %}
    Inicio | Administración de Recetas
{% endblock %}
{% block contenido %}
    <h1>{{ titulo }}</h1>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width: 250px;">#</th>
                    <th scope="col">Título</th>
                    <th scope="col" class="text-center" style="width: 160px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for receta in recetas %}
                    <tr>
                        <th scope="row">
                            {{ receta._id }}
                        </th>
                        <td>
                            {{ receta.titulo }}
                        </td>
                        <td>
                            <a href="/receta/{{ receta._id }}" class="btn btn-primary" title="Ver receta">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/admin/recetas/editar/{{ receta._id }}" class="btn btn-secondary" title="Editar receta">
                                <i class="fas fa-pen"></i>
                            </a>
                            <form action="/admin/recetas/{{ receta._id }}" method="post" style="display: inline;">
                                <input type="hidden" name="_method" value="delete" />
                                <button class="btn btn-danger" title="Eliminar receta">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <p>No se encontraron recetas.</p>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}